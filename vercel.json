{
  "version": 2,

  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["../db.json"] }
    }
  ],

  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*\\.(js|css|map|png|jpe?g|gif|svg|ico|json))", "dest": "frontend/build/$1" },
    { "src": "/(.*)", "dest": "frontend/build/index.html" }
  ]
}
